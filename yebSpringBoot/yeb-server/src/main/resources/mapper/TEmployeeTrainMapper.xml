<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.icatw.yeb.server.mapper.TEmployeeTrainMapper">

    <resultMap type="cn.icatw.yeb.server.domain.TEmployeeTrain" id="TEmployeeTrainMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="eid" column="eid" jdbcType="INTEGER"/>
        <result property="traindate" column="trainDate" jdbcType="TIMESTAMP"/>
        <result property="traincontent" column="trainContent" jdbcType="VARCHAR"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询指定行数据-->
    <select id="selectTEmployeeTrainList" resultMap="TEmployeeTrainMap">
        select
        id, eid, trainDate, trainContent, remark
        from t_employee_train
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="eid != null">
                and eid = #{eid}
            </if>
            <if test="traindate != null">
                and trainDate = #{traindate}
            </if>
            <if test="traincontent != null and traincontent != ''">
                and trainContent = #{traincontent}
            </if>
            <if test="remark != null and remark != ''">
                and remark = #{remark}
            </if>
        </where>
    </select>
</mapper>
