<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.icatw.yeb.server.mapper.TRoleMapper">

    <resultMap type="cn.icatw.yeb.server.domain.TRole" id="TRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="namezh" column="nameZh" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询指定行数据-->
    <select id="selectTRoleList" resultMap="TRoleMap">
        select
        id, name, nameZh
        from t_role
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="namezh != null and namezh != ''">
                and nameZh = #{namezh}
            </if>
        </where>
    </select>
</mapper>
